<nav aria-label="Page navigation">
    <ul class="pagination">
      {% if pagination.href.previous %}
        <li class="page-item">
          <a class="page-link" aria-label="Previous" href="{{ pagination.href.previous | url}}">Previous</a>
        </li>
      {% else %} 
        <li class="page-item disabled"><a class="page-link" href="#">Previous</a></li>
      {% endif %}
      </li>
      {%- for pageEntry in pagination.pages -%}
        {%- assign pageitem= "page-item" %}
        {%- if page.url == pagination.hrefs[ forloop.index0 ] -%}
          {%- assign pageitem = 'page-item active' -%}
        {%- endif -%}
        <li class="{{ pageitem }}">
            <a href="{{ pagination.hrefs[ forloop.index0 ] | url }}" class="page-link"{% if page.url == pagination.hrefs[ forloop.index0 ] %} aria-current="page"{% endif %}>
                {{ forloop.index }}
            </a>
        </li>
      {%- endfor %}
      {% if pagination.href.next %}
        <li class="page-item"><a class="page-link" href="{{ pagination.href.next | url }}">Next</a></li>
      {% else %}
        <li class="page-item disabled"><a class="page-link" href="#">Next</a></li>
      {% endif %}
    </ul>
  </nav>